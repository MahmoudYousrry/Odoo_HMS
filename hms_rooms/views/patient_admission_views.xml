<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="patient_admission_form_view" model="ir.ui.view">
        <field name="name">patient.admission.form</field>
        <field name="model">patient.admission</field>
        <field name="arch" type="xml">
            <form string="Patient Admission">
                <header>
                    <!-- Workflow Buttons -->
                    <button name="action_confirm" type="object" string="Confirm"
                            invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_set_cancelled" type="object" string="Cancel"
                            invisible="state in ['draft','cancelled','in_progress','discharged']" class="btn-danger"/>
                    <button name="action_discharge" type="object" string="Discharge"
                            invisible="state != 'in_progress' or show_discharge_button" class="btn-primary"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,discharged"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id" required="1" readonly="state in ['discharged','cancelled']"/>
                            <field name="room_type" required="1" readonly="state in ['discharged','cancelled']"/>
                            <field name="room_id" required="1" readonly="state in ['discharged','cancelled']"/>
                        </group>
                        <group>
                            <field name="admission_date"/>
                            <field name="discharge_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Services">
                            <group string="Basic Services (Included)">
                                <field name="basic_room_service_ids" widget="many2many_tags" readonly="1"/>
                            </group>
                            <group string="Optional Services">
                                <field name="optional_room_service_ids" widget="many2many_tags" readonly="state in ['discharged','cancelled']"/>
                            </group>
                        </page>
                    </notebook>
                    <group class="oe_subtotal_footer oe_right">
                        <field name="total_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="patient_admission_list_view" model="ir.ui.view">
        <field name="name">patient.admission.list</field>
        <field name="model">patient.admission</field>
        <field name="arch" type="xml">
            <list string="Patient Admissions">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="room_id"/>
                <field name="admission_date"/>
                <field name="discharge_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>
</odoo>