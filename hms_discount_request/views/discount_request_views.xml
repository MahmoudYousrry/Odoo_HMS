<odoo>
    <!-- List View -->
    <record id="hms_discount_request_view_list" model="ir.ui.view">
        <field name="name">hms.discount.request.view.list</field>
        <field name="model">hms.discount.request</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="invoice_id"/>
                <field name="discount_amount" widget="monetary"/>
                <field name="state"/>
            </list>
        </field>
    </record>


    <!-- Form View -->
    <record id="hms_discount_request_view_form" model="ir.ui.view">
        <field name="name">hms.discount.request.view.form</field>
        <field name="model">hms.discount.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" type="object" string="Submit" class="oe_highlight"
                            groups="hms_discount_request.group_discount_request_creator"
                            invisible="state != 'draft'"/>

                    <button name="action_approve" type="object" string="Approve" class="oe_highlight"
                            groups="hms_discount_request.group_discount_request_financial_manager"
                            invisible="state != 'submitted'"/>

                    <button name="action_reject" type="object" string="Reject"
                            groups="hms_discount_request.group_discount_request_financial_manager"
                            invisible="state != 'submitted'"/>

                    <button name="action_apply_discount" type="object" string="Apply Discount" class="oe_highlight"
                            groups="hms_discount_request.group_discount_request_accountant"
                            invisible="state != 'approved'"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,applied"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="invoice_id" readonly="state in ['approved','rejected','applied']"/>
                            <field name="patient_id" options="{'no_open': True}"
                                   readonly="state in ['approved','rejected','applied']"/>
                            <field name="discount_amount" widget="monetary"
                                   readonly="state in ['approved','rejected','applied']"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="discount_reason" readonly="state in ['approved','rejected','applied']"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>
